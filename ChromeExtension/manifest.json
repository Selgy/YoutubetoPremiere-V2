{
    "manifest_version":  3,
    "name":  "Youtube to Premiere Pro V3",
    "version": "3.0.0",
    "description": "Ajoute des boutons sur YouTube pour importer directement des vidéos vers Adobe Premiere Pro. Interface intuitive intégrée à YouTube.",
    "permissions":  [
                        "activeTab",
                        "storage",
                        "cookies"
                    ],
    "host_permissions":  [
                             "https://www.youtube.com/*",
                             "https://youtu.be/*",
                             "https://youtube.com/*",
                             "https://m.youtube.com/*"
                         ],
    "action":  {
                   "default_icon":  {
                                        "48":  "icon.png"
                                    },
                   "default_popup":  "popup.html",
                   "default_title":  "YouTube to Premiere - Paramètres"
               },
    "background":  {
                       "service_worker":  "background.js"
                   },
    "content_scripts":  [
                            {
                                "matches":  [
                                                "https://www.youtube.com/*",
                                                "https://youtube.com/*"
                                            ],
                                "js":  [
                                           "socket.io.min.js",
                                           "content.js"
                                       ],
                                "run_at":  "document_idle"
                            }
                        ],
    "web_accessible_resources":  [
                                     {
                                         "resources":  [
                                                           "icon.png"
                                                       ],
                                         "matches":  [
                                                         "https://www.youtube.com/*",
                                                         "https://youtube.com/*"
                                                     ]
                                     }
                                 ],
    "icons":  {
                  "48":  "icon.png"
              }
}
